#!/usr/bin/env bash
# Script to configure Nginx with a custom HTTP header on an Ubuntu machine

# Install Nginx if it's not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Get the server's hostname
HOSTNAME=$(hostname)

# Configure Nginx to add the custom header
# The configuration will depend on your Nginx setup. This is an example:
CUSTOM_HEADER="add_header X-Served-By $HOSTNAME;"

# Use awk to add the custom header to the first server block in the default Nginx configuration
sudo awk -v r="$CUSTOM_HEADER" '/server { print; print r; next }1' /etc/nginx/sites-available/default > temp && sudo mv temp /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Ensure that the service is running
sudo systemctl is-enabled nginx
